<div data-controller="answer" data-answer-endpoint-value="<%= answer_questions_path %>">
  <div class="bg-white shadow-lg rounded-lg p-8 flex flex-wrap justify-center mb-10">
    <h1 class="text-2xl font-bold mb-10 basis-full text-center">Search in ada.rb</h1>
    <div class="flex items-center basis-6/12">
      <input
        class="border border-gray-300 rounded-l px-4 py-2 w-full focus:outline-none shadow-lg"
        placeholder="Search..."
        data-answer-target="question"
      >
      <button
        class="bg-blue-500 hover:bg-blue-600 text-white rounded-r px-4 py-2 ml-1 shadow-lg"
        data-action="click->answer#create"
      >Search</button>
    </div>
  </div>

  <div class="p-6 mx-auto bg-white rounded-xl shadow-lg flex items-center space-x-4">
    <div class="flex-shrink-0">
      <img class="h-12 w-12" src="https://via.placeholder.com/50" alt="ada.rb Helper logo">
    </div>
    <div>
      <div class="text-xl font-medium text-black">ada.rb Helper</div>
      <p class="text-gray-500" data-answer-target="response">&nbsp;</p>
    </div>
  </div>
</div>
